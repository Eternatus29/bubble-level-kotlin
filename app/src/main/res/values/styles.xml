<?xml version="1.0" encoding="utf-8"?>

<!--
  ~ styles.xml

-->

<resources>


    <!-- CLINOMETER ACTIVITY THEME -->

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/bgpaint_light</item>
        <item name="colorPrimaryDark">@color/bgpaint_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


    <!-- STANDARD THEME (for Settings, Calibration etc.) -->

    <style name="MyTheme" parent="Theme.AppCompat">
        <item name="colorPrimaryDark">@color/bgpaint_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- ABOUT DIALOG -->

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/bgpaint_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>

        <!-- Additionally if you want animations when dialog opening -->
        <!-- <item name="android:windowEnterAnimation">@anim/slide_up</item>-->
        <!-- <item name="android:windowExitAnimation">@anim/slide_down</item>-->
    </style>


    <!-- CALIBRATION PROGRESSBAR -->

    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">25dp</item>
        <item name="android:maxHeight">250dp</item>
    </style>

</resources>
